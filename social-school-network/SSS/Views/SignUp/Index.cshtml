    <style type="text/css">

        body {
            background-color: #019494;
            overflow-x: hidden;
            font-family: sans-serif !important;
        }

        .main-panel {
            margin-top: 5%;
            margin-bottom: 5%;
            margin-left: 1%;
            margin-right: -6%;
            border-radius: 25px;
        }

        .img-thumbnail {
            padding: 0px;
            background-color: #fff;
            max-width: 100%;
            height: auto;
            border: none;
            border-top-left-radius: 25px;
            border-bottom-left-radius: 25px;
            min-height: 650px;
