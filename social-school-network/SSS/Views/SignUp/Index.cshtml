        }

        .top-left {
            position: absolute;
            top: 8px;
            left: 16px;
            color: white;
            font-family: open-sans;
            font-size: 20px;
            font-weight: 500;
        }

        .email-message {
            color: red;
            font-weight: 300;
            font-size: 13px;
            display: none;
        }
        /* Centered text */
        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #ffff;
        }

        .required-sign-left {
            padding-left: 45px;
            padding-top: 14px;
            color: #ff0000;
        }

        .required-sign-right {
            overflow: hidden;
            display: block;
            position: absolute;
            padding-left: -6px;
            padding-top: 13px;
            margin-left: -26px;
            color: #ff0000;
        }

        .required-field {
            border-bottom: 1px solid red !important;
        }

        .login-container {
            padding-left: 40px;
        }

        .form-row > .col, .form-row > [class*=col-] {
            padding-right: 15px;
            padding-left: 15px;
        }
        .form-control {
            float: right;
            width: calc(100% - 20px);
        }
        span.req-asterisk {
            width: 20px;
            float: left;
            color: red;
            padding-top: 15px;
            display: block;
        }

        body.blue {
            background-color: #019494;
        }

        body.magenta {
            background-color: #FF00FF;
        }
          

    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=radio][name=Gender]').change(function () {
                if (this.value == 'Male') {
                    $('body').removeClass('magenta');
                    $('body').addClass('blue');
                }
                else if (this.value == 'Female') {
                    $('body').removeClass('blue');
                    $('body').addClass('magenta');
                }
            });

            $(".required").focusin(function () {
                $(this).removeClass("required-field");
            });

            //Password Strength Check
            $(".password").keyup(function () {

                // Check Password Input Field By Regular Expression
                $(".passwordlength").css("display", "none");
                var pass = $(this).val();

                var strength = 1;
                var arr = [/.{5,}/, /[a-z]+/, /[0-9]+/, /[A-Z]+/];
                jQuery.map(arr, function (regexp) {
                    if (pass.match(regexp))
                        strength++;
                });
                if (strength < 3) {
                    $(this).css("color", "red");
                }
                else if (strength >= 3 && strength <= 4) {
                    $(this).css("color", "#c39b07");
                }
                else if (strength >= 5) {
                    $(this).css("color", "green");
                }

            });

            $(".email").keyup(function () {
                $("#validEmail").css("display", "none");
                //$("#existEmail").css("display", "block");
            });
            $("#ConfirmPassword").keyup(function () {
                $(".passwordmatch").css("display", "none");
            });
        });

        function CommonValidation() {
            var isValid = true;
            $(".required").each(function () {

                // Check Empty Input Fields
                var value = $(this).val();
                if (value != null && value != "" && typeof (value) !== undefined) {
                    //do nothing
                }
                else {
                    isValid = false;
                    $(this).addClass("required-field");
                }



            });

            // Check Email Address
            $(".email").each(function () {

                // Check Email Input Field By Regular Expression
                var userinput = $(this).val();

                if (userinput != null && userinput != "" && typeof (userinput) !== undefined) {
                    var pattern = /^\b[A-Z0-9._%-]+@@[A-Z0-9.-]+\.[A-Z]{2,4}\b$/i

                    if (!pattern.test(userinput)) {

                        isValid = false;
                        $("#validEmail").css("display", "block");
                        //$("#existEmail").css("display", "block");
                        $(this).addClass("required-field");
                    }
                }

            });



            //Password Strength Check
            $(".password-box").each(function () {

                // Check Password Input Field By Regular Expression
                var pass = $(this).val();
                var confirmPass = $("#ConfirmPassword").val();

                if (pass != confirmPass) {
                    $(".passwordmatch").css("display", "block");
                }

                var strength = 1;
                var arr = [/.{5,}/, /[a-z]+/, /[0-9]+/, /[A-Z]+/];
                jQuery.map(arr, function (regexp) {
                    if (pass.match(regexp))
                        strength++;
                });

                if (pass.length <= 6) {
                    // If Password length Is less than 6
                    $(".passwordlength").css("display", "block");
                    isValid = false;
                }
                else {
                    $(".passwordlength").css("display", "none");
                }
                if (strength < 3) {
                    // if Password Is not Strong
                    isValid = false;
                }


            });



            return isValid;
        }
    </script>
</head>

<body>

